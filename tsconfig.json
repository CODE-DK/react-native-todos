{
  "extends": "expo/tsconfig.base",
  "compileOnSave": true,
  "compilerOptions": {
    //use strict mode
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    //compile options
    "outDir": "build",
    "alwaysStrict": true,
    "pretty": true
  }
}
